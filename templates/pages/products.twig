{% extends "layouts/master.twig" %}
{% block content %}
	<div class="container mt-3">
		<h1 class="text-center display-4">
			Daftar Products
		</h1>
		<div class="d-flex  justify-content-end">
			<a href="" class="btn btn-primary mb-2 mr-0" data-bs-toggle="modal" data-bs-target="#modalAddProduct">Tambah Data</a>
		</div>
		<table class="table table-hover table-striped table-bordered">
			<tr class="text-center">
				<th class="text-center">No</th>
				<th>Nama Products</th>
				<th>Harga</th>
				<th>Stock Ready</th>
				<th>Aksi</th>
			</tr>
			<tr>
				<td colspan="4" class="text-center" id="loader">
					<span class="loader"></span>
				</td>
			</tr>
		</table>
	</div>

	{% include "components/modalAddProduct.twig" %}
	{% include "components/modalEditProduct.twig" %}
	{% include "components/modalHapus.twig" %}
	{% include "components/modalSuccess.twig" %}
{% endblock %}
{% block js %}
	<script src="https://cdnjs.cloudflare.com/ajax/libs/accounting.js/0.4.1/accounting.min.js" integrity="sha512-LW+1GKW2tt4kK180qby6ADJE0txk5/92P70Oh5YbtD7heFlC0qFFtacvSnHG4bNXmLnZq5hNb2V70r5DzS/U+g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<script src="/assets/js/product.js"></script>
{% endblock %}
