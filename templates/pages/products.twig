{% extends "layouts/master.twig" %}
{% block content %}
	<div class="container mt-3">
		<h1 class="text-center display-4">
			Daftar Products
		</h1>
		<div class="d-flex  justify-content-end">
			<a href="" class="btn btn-primary mb-2 mr-0" data-bs-toggle="modal" data-bs-target="#modalProduct">Tambah Data</a>
		</div>
		<table class="table table-hover table-striped table-bordered">
			<tr>
				<th class="text-center">No</th>
				<th>Nama Products</th>
				<th>Harga</th>
				<th>Jumlah</th>
			</tr>
			<tr>
				<td colspan="4" class="text-center" id="loader">
					<span class="loader"></span>
				</td>
			</tr>
		</table>
	</div>

	{% include "components/modalProduct.twig" %}
{% endblock %}
{% block js %}
	<script src="/assets/js/product.js"></script>
{% endblock %}
