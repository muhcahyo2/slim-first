<div class="modal modal-lg relative fade" tabindex="-1" id="modalEditProduct">
	<div class="modal-dialog">
		<div class="overlay rounded d-flex align-items-center justify-content-center d-none" id="dataLoader">
			<span class="loader"></span>
		</div>
		<div class="modal-content">
			<form method="post" enctype="multipart/form-data">
				<div class="modal-header">
					<h5 class="modal-title">Edit Product</h5>
					<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<div class="d-flex justify-content-center">
						<img src="" class="w-50" alt="" srcset="">
					</div>
					<div class="mb-3">
						<label for="name" class="form-label">Nama Product</label>
						<input type="text" class="form-control" id="name" aria-describedby="emailHelp" name="nama" required disabled>
					</div>
					<div class="mb-3">
						<label for="deskripsi" class="form-label">Deskripsi Product</label>
						<textarea type="text" class="form-control" id="deskripsi" aria-describedby="emailHelp" name="deskripsi" col="3" required disabled></textarea>
					</div>
					<div class="mb-3">
						<label for="total" class="form-label">Jumlah Product</label>
						<input type="number" class="form-control" id="total" aria-describedby="emailHelp" name="total" required min="1" disabled>
					</div>
					<div class="mb-3">
						<label for="harga" class="form-label">Harga Product</label>
						<input type="number" class="form-control" id="harga" aria-describedby="emailHelp" name="harga" required disabled>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
					<button id="edit_btn" class="btn btn-primary">edit Data</button>
					<button id="submit_btn" type="submit" class="btn btn-primary d-none">simpan Data</button>
				</div>
			</form>
		</div>
	</div>
</div>
